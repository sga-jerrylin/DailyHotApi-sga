# SGA DailyHot AI 热点监控平台 - Docker 环境配置

# 服务端口
PORT=6688

# 允许的域名 - Docker环境允许所有域名
ALLOWED_DOMAIN="*"

# 允许的主域名 - Docker环境允许所有主机
ALLOWED_HOST="*"

# ROBOT 设置
DISALLOW_ROBOT=true

# Redis 配置 - Docker网络内部通信
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_PASSWORD=""

# 缓存时长（秒）- 1小时
CACHE_TTL=3600

# 请求超时（毫秒）- 8秒
REQUEST_TIMEOUT=8000

# 日志输出
USE_LOG_FILE=true

# RSS 模式
RSS_MODE=false

# Node.js 环境
NODE_ENV=production

# DeepSeek AI 配置（可选，前端直接调用）
# DEEPSEEK_API_KEY=sk-ea98b5da86954ddcaa2ff10e5bbba2b4
